extends layout
append styles
    link(rel='stylesheet', href='/stylesheets/tools/html-and-pug.css')
append scripts
    script(src='/javascripts/tools/html-and-pug.js')
block content
    .page-header #[h1 HTML to Pug converter]
    .container
        form.html(method='post')
            fieldset #[strong HTML:] #[textarea#html(name='html')]
            fieldset #[strong Pug:] #[textarea#pug(name='pug')]
            fieldset.actions
                button.convert(type='submit') Convert!
