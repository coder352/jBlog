extends ../layout
append styles
    link(rel='stylesheet', href='/stylesheets/tools/html2jade.css')
block content
    header
        h1#logo HTML to Jade Converter
    #container
        .error.hide
        .setting
            input#indent-with-spaces(type='radio', name='indent-with', value='spaces', checked='')
            label(for='indent-with-spaces') SPACES
            input#indent-with-tabs(type='radio', name='indent-with', value='tabs')
            label(for='indent-with-tabs') TABS
            span.wide-of-indent
                select(name='width-of-indent')
                    option(value='1') 1
                    option(value='2', selected='') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
                    option(value='6') 6
                label.no-pointer(for='tab-size') WIDTH OF INDENT
        #tabs1-html2jade.tab-content.blue
            .contain-editor
                #html_editor.editor.input
                #jade_editor.editor.output
    article
        .information
            b HTML2jade
            |  help you convert a HTML snippet to a Jade snippet. Useful for testing out how something would look in Jade vs HTML
    footer
        .powered_by
            | Experiment by
            a(href='mailto:sarunyhot@gmail.com', target='_blank') chenka
            |             | Powered by
            a(href='http://jade-lang.com/', target='_blank') Jade
            | ,
            a(href='https://github.com/donpark/html2jade', target='_blank') html2jade
            | ,
            a(href='http://ace.c9.io/', target='_blank') Ace
